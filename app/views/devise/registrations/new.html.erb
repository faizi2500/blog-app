<h2 class="login-heading">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class= "login-form">
  <%= f.hidden_field :post_counter, value: 0 %>
   
    <%= f.text_field :name, autofocus: true, placeholder: "Your User Name" %>


 
  
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your User Email" %>


 
   
    <% if @minimum_password_length %>
    <% @minimum_password_length %> 
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Your Password minimum 6 characters" %>
 


   
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>



    <%= f.submit "Sign up" %>
 
  </div>
<% end %>

<div class ="options">
<%= render "devise/shared/links" %>
</div>